<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/write"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/catalog"
        android:layout_width="fill_parent"
        android:layout_height="17dp"
        android:background="#F2F4F5"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:text="A"
        android:textColor="#888888"
        android:textSize="10dp" />
    <!-- 头像 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/item_reminder_linear_head"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" >

            <ImageView
                android:id="@+id/item_reminder_image_head"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerInParent="true"
                android:contentDescription="@drawable/zhuang_zhuan_ying_ji_feng"
                android:src="@drawable/log_ic" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/head_round" />
        </RelativeLayout>
        <!-- 昵称 -->

        <TextView
            android:id="@+id/item_reminder_text_view_name"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="hhhh"
            android:textColor="#666666" />
        <!-- 选择框 -->

        <CheckBox
            android:id="@+id/item_reminder_chack_box"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:button="@null"
            android:drawableLeft="@drawable/selector_round_tick"
            android:drawablePadding="0dp"
            android:drawableStart="@drawable/selector_round_tick"
            android:padding="7dp" />
    </LinearLayout>

</LinearLayout>