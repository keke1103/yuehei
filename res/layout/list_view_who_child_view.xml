<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:background="@color/write"
        android:paddingEnd="20dp"
        android:paddingLeft="36dp"
        android:paddingRight="20dp"
        android:paddingStart="36dp"
        android:paddingTop="8dp" >

        <TextView
            android:id="@+id/list_child_who_can_see_text_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/public_w"
            android:textColor="#666666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/list_child_who_can_see_text_frisnds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_child_who_can_see_text_public"
            android:layout_marginTop="5dp"
            android:text="@string/visible_to_friends"
            android:textColor="#888888"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/list_child_who_can_see_check_box"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/unselected_round"
            android:contentDescription="@drawable/unselected_round"
            android:padding="10dp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginEnd="11dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="11dp"
        android:layout_marginStart="36dp"
        android:background="#D9DBDC" />

</LinearLayout>