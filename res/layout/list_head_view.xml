<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 广告 -->

    <View
        android:id="@+id/main_image_guang_gao"
        android:layout_width="fill_parent"
        android:layout_height="143.3dp"
        android:background="@drawable/main_guang_gao" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:background="@color/thread_gray" />

    <!-- 推荐开黑 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/main_text_recommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/tuijiankaihei"
            android:textColor="@color/title_text"
            android:textSize="14sp" />

        <!-- 玩家头像1-5 -->

        <ImageView
            android:id="@+id/main_image_recommended_user1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/head_shape_round_stroke"
            android:contentDescription="@drawable/ic_launcher"
            android:src="@drawable/tui_jian_kai_hei_1" />

        <ImageView
            android:id="@+id/main_image_recommended_user2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@drawable/ic_launcher"
            android:src="@drawable/tui_jian_kai_hei_2" />

        <ImageView
            android:id="@+id/main_image_recommended_user3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@drawable/ic_launcher"
            android:src="@drawable/tui_jian_kai_hei_3" />

        <ImageView
            android:id="@+id/main_image_recommended_user4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@drawable/ic_launcher"
            android:src="@drawable/tui_jian_kai_hei_4" />

        <ImageView
            android:id="@+id/main_image_recommended_user5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@drawable/ic_launcher"
            android:src="@drawable/tui_jian_kai_hei_5" />
        <!-- 更多图标 -->

        <ImageView
            android:id="@+id/main_image_recommended_gen_duo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@drawable/ic_launcher"
            android:src="@drawable/main_geng_duo_tu" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@color/thread_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/main_list_head_liner_new_freads"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/main_list_head_new_freads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/new_situation"
                    android:textColor="#7186E6"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_list_head_new_freads"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/not_afarid_freads"
                    android:textColor="@color/light_gray"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="9dp"
                    android:contentDescription="@drawable/main_lu_you_xin_dong_tai_tu"
                    android:src="@drawable/main_lu_you_xin_dong_tai_tu" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/main_list_head_liner_not_afarid_official"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/main_list_head_new_official"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/not_afarid_official"
                    android:textColor="#CEB063"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_list_head_new_official"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/latest_news"
                    android:textColor="@color/light_gray"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="9dp"
                    android:contentDescription="@drawable/main_lu_you_xin_dong_tai_tu"
                    android:src="@drawable/wuya" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/main_list_head_liner_video_highlights"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/main_list_head_video_highlights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/video_highlights"
                    android:textColor="#56A482"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_list_head_video_highlights"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/compilation"
                    android:textColor="@color/light_gray"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="9dp"
                    android:contentDescription="@drawable/main_lu_you_xin_dong_tai_tu"
                    android:src="@drawable/main_jin_cai_shi_ping_jing_ji" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/main_list_head_liner_win_points"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/main_list_head_win_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/win_points"
                    android:textColor="#2D83AE"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_list_head_win_points"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/quadruple"
                    android:textColor="@color/light_gray"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@drawable/zhuang_zhuan_ying_ji_feng"
                    android:padding="10dp"
                    android:src="@drawable/zhuang_zhuan_ying_ji_feng" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 横向listview -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@color/thread_gray" />

    <Gallery
        android:id="@+id/main_list_head_gallery"
        android:layout_width="fill_parent"
        android:layout_height="130dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@color/thread_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="24.3dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@drawable/new_posts"
            android:src="@drawable/new_posts" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="12.6dp"
            android:text="@string/new_posts"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>