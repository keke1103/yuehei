<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical" >
    <!-- 填写验证码 -->
    <include
        android:id="@+id/mobile_number_title_bar"
        layout="@layout/title_navigation_bar" />

    <TextView
        android:id="@+id/verification_code_text_phong_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/nuokesashi"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/text_stroke"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/verification_code_edit_message_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="2"
            android:background="@null"
            android:hint="@string/message_verification_code"
            android:inputType="phone"
            android:paddingLeft="5dp"
            android:paddingStart="5dp" />

        <TextView
            android:id="@+id/verification_code_text_resend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/text_stroke"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/resend" />
    </LinearLayout>

    <Button
        android:id="@+id/verification_code_text_next"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_rounded_corners_and_solid"
        android:padding="5dp"
        android:text="@string/next" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/verification_code_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.5"
            android:scaleY="0.5" />

        <TextView
            android:id="@+id/verification_code_text_binding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/binding"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>