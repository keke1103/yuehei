<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f4f5"
    android:orientation="vertical" >

    <!-- 填写验证码 -->

    <include
        android:id="@+id/mobile_number_title_bar"
        layout="@layout/title_navigation_bar" />

    <TextView
        android:id="@+id/verification_code_text_phong_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="13dp"
        android:text="我们已给你的手机号码+86-18883296256发送了一条验证短信"
        android:textColor="#888888"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="14dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/verification_code_edit_message_code"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@null"
            android:cursorVisible="false"
            android:hint="@string/message_verification_code"
            android:paddingLeft="11dp"
            android:textColor="#888888"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/verification_code_text_resend"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/resend"
            android:textColor="#888888"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/verification_code_text_next"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/button_rounded_corners_and_solid"
        android:text="@string/next"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/verification_code_check"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="14dp"
            android:contentDescription="@drawable/yo_hey_xuanzhong"
            android:src="@drawable/yo_hey_xuanzhong" />

        <TextView
            android:id="@+id/verification_code_text_binding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="14dp"
            android:text="@string/binding"
            android:textColor="#888888"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>