<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="66dp" >

        <!-- 头像 -->

        <RelativeLayout
            android:id="@+id/list_main_linear_head_tu"
            android:layout_width="62dp"
            android:layout_height="62dp" >

            <com.yuanchuang.yohey.view.MyImageView
                android:id="@+id/list_main_image_head_tu"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_centerInParent="true"
                android:src="@drawable/yp_hey_background_image" />

            <ImageView
                android:id="@+id/list_main_image_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@drawable/popular_icons"
                android:src="@drawable/popular_icons"
                android:visibility="gone" />
        </RelativeLayout>

        <!-- 昵称 -->

        <TextView
            android:id="@+id/list_main_text_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/list_main_linear_head_tu"
            android:layout_toRightOf="@id/list_main_linear_head_tu"
            android:text="@string/meng_mei"
            android:textColor="#5A5959"
            android:textSize="14sp" />

        <!-- 发表时间 -->

        <TextView
            android:id="@+id/list_main_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/list_main_text_nick"
            android:layout_alignStart="@+id/list_main_text_nick"
            android:layout_below="@+id/list_main_text_nick"
            android:paddingTop="3dp"
            android:text="@string/list_time"
            android:textColor="@color/light_gray"
            android:textSize="11sp" />
        <!-- 加入图 -->

        <ImageView
            android:id="@+id/list_main_image_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@drawable/tian_jia_an_niu"
            android:src="@drawable/tian_jia_an_niu" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/list_main_linear_context"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >
    </LinearLayout>

    <View
        android:id="@+id/list_main_line_zhong"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:background="@color/thread_gray" />

    <RelativeLayout
        android:id="@+id/list_main_linear_ge_ren_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/list_main_text_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="黑色玫瑰"
                android:textColor="@color/light_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/list_main_text_dan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:text="黄金5"
                android:textColor="@color/light_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_main_linear_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/list_main_image_up"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="@drawable/like_point_grey"
                android:src="@drawable/like_point_grey" />

            <TextView
                android:id="@+id/list_main_text_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99+" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_main_linear_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/list_main_linear_up"
            android:layout_toStartOf="@id/list_main_linear_up"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/list_main_image_message"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="@drawable/comments_grey"
                android:src="@drawable/comments_grey" />

            <TextView
                android:id="@+id/list_main_text_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99+" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_main_linear_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/list_main_linear_message"
            android:layout_toStartOf="@id/list_main_linear_message"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="@drawable/main_jia_ru_zhan_dui"
                android:src="@drawable/main_jia_ru_zhan_dui" />

            <TextView
                android:id="@+id/list_main_text_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99+"
                android:textColor="@color/main_text"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/list_main_line_di"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="50dp"
        android:background="@color/thread_gray" />

</LinearLayout>