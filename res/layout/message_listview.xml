<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/mm" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5" >

        <TextView
            android:id="@+id/left_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/zhao" 
            android:layout_marginTop="5dp"
              android:layout_marginLeft="20dp"
            android:maxLength="16"/>

        <TextView
            android:id="@+id/left_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/duola"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
             android:maxLength="16"
             />

        

       
       <View 
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/beizhu"
           android:layout_alignParentBottom="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
               android:layout_marginTop="5dp"
                  android:layout_marginBottom="5dp"
                  android:layout_marginRight="20dp">
            <TextView
            android:id="@+id/right_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/msg_time" 
           android:gravity="center_horizontal"/>
         <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            
             >
              <ImageView 
            android:id="@+id/iv_numb"
                  android:layout_width="12dp"
                  android:layout_height="12dp"
                  android:background="@drawable/rub_course_message_icon_point"
                  android:layout_centerInParent="true"
           />
               <TextView
            android:id="@+id/right_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num" 
            android:textColor="@color/white"
            android:layout_centerInParent="true"
           />
         </RelativeLayout>
         </LinearLayout>
    </RelativeLayout>

</LinearLayout>