<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_gravity="center"
    android:background="@color/write" >

    <RadioGroup
        android:id="@+id/selection_bar_radio_group"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/selection_bar_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/iconfont_623"
            android:gravity="center_horizontal"
            android:text="@string/homepage"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/selection_bar_friends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/iconfont_621"
            android:gravity="center_horizontal"
            android:text="@string/friends"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/selection_bar_post_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher"
            android:contentDescription="@drawable/ic_launcher" />

        <RadioButton
            android:id="@+id/selection_bar_circle_of_friends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/iconfont_622"
            android:gravity="center_horizontal"
            android:text="@string/lufriends"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/selection_bar_personal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/iconfont_geren11"
            android:gravity="center_horizontal"
            android:text="@string/me"
            android:textSize="13sp" />
    </RadioGroup>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/gray" />

</RelativeLayout>