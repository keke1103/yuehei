<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 导入头文件 -->

    <include
        android:id="@+id/posting_include_itle"
        layout="@layout/title_navigation_bar" />

    <!-- 输入内容 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_stroke"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/posting_include_edit_context"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/posts"
            android:paddingTop="10dp"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#F0F0F0" />
    <!-- 权限设置 -->

    <CheckBox
        android:id="@+id/area_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableEnd="@drawable/rub_course_go_to_next_right"
        android:drawableRight="@drawable/rub_course_go_to_next_right"
        android:padding="10dp"
        android:text="@string/area"
        android:textSize="13sp" />

</LinearLayout>