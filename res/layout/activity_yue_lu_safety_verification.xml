<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical" >
    <!-- 输入验证码的界面 -->
    <include
        android:id="@+id/sasafety_verification_title_bar"
        layout="@layout/title_navigation_bar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
             android:id="@+id/safety_verification_image_another_one"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@color/gray"
            android:contentDescription="@drawable/ic_launcher" />

        <TextView
             android:id="@+id/safety_verificatio_text_another_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/another_one" />
    </LinearLayout>

    <EditText
         android:id="@+id/safety_verification_edit_cofirmation_code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/text_stroke"
        android:hint="@string/enter_confirmation_code"
        android:padding="3dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/safety_verification_button_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_rounded_corners_and_solid"
        android:padding="5dp"
        android:text="@string/submit" />

</LinearLayout>