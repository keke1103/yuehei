<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    android:focusable="true"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:paddingBottom="3dp" >

        <!-- 头像 -->

        <ImageView
            android:id="@+id/personal_post_image_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@drawable/ic_launcher"
            android:src="@drawable/tui_jian_kai_hei_1" />

        <!-- 昵称 -->

        <TextView
            android:id="@+id/personal_post_nick_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/personal_post_image_head"
            android:layout_toRightOf="@+id/personal_post_image_head"
            android:text="@string/zhao"
            android:textColor="@color/main_title_text"
            android:textSize="14sp" />

        <!-- 时间 -->

        <TextView
            android:id="@+id/personal_post_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/personal_post_nick_text_name"
            android:layout_alignStart="@id/personal_post_nick_text_name"
            android:layout_below="@id/personal_post_nick_text_name"
            android:paddingTop="3dp"
            android:text="18:55"
            android:textColor="@color/main_text"
            android:textSize="11sp" />

        <!-- 添加按钮 -->

        <ImageView
            android:id="@+id/add_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:contentDescription="@drawable/tian_jia_an_niu"
            android:src="@drawable/tian_jia_an_niu" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5px"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:background="#F1F1F1" />
    <!-- 发表内容 -->

    <LinearLayout
        android:id="@+id/personal_post_cotext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#DADBDD" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <!-- 添加 -->

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@drawable/main_jia_ru_zhan_dui"
            android:src="@drawable/main_jia_ru_zhan_dui" />

        <TextView
            android:id="@+id/personal_post_text_addd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="1"
            android:textColor="@color/main_text"
            android:textSize="12sp" />

        <!-- 留言图标 -->

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@drawable/comments_grey"
            android:src="@drawable/comments_grey" />

        <TextView
            android:id="@+id/personal_post_text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="1"
            android:textColor="@color/main_text"
            android:textSize="12sp" />
        <!-- 点赞图标 -->

        <CheckBox
            android:id="@+id/personal_post_image_zhan"
            android:layout_width="35dp"
            android:layout_height="25dp"
        	android:padding="5dp"
        	android:gravity="center_vertical"
        	android:button="@null"
        	android:drawableLeft="@drawable/like_number_selector"
        	android:drawableStart="@drawable/like_number_selector"
        	android:drawablePadding="3dp"
        	android:text="1"
        	android:textColor="@color/main_text"
            android:textSize="12sp"/>

   <!--      <TextView
            android:id="@+id/personal_post_text_zhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="1"
            android:textColor="@color/main_text"
            android:textSize="12sp" /> -->
    </LinearLayout>

</LinearLayout>